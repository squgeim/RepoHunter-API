{
  "name": "repohunter-api",
  "version": "1.0.0",
  "description": "A service that lets you search for package dependencies in your organization's projects.",
  "main": "index.js",
  "scripts": {
    "start": "node dist",
    "start:dev": "nodemon --watch .env --watch src --exec 'babel-node src --source-maps'",
    "stop": "pm2 stop",
    "prestart": "npm run build",
    "precommit": "lint-staged",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "build": "rimraf dist && babel src -D --out-dir dist",
    "test": "NODE_ENV=test jest src",
    "test:watch": "NODE_ENV=test jest src --watch",
    "prettier": "prettier --single-quote --trailing-comma es5 --write \"src/**/*.js\""
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "contributors": [
    "Shreya Dahal <shreyadahal@gmail.com>",
    "Suchan Badyakar <suchan211@gmail.com>",
    "Deepak Thapa"
  ],
  "license": "MIT",
  "dependencies": {
    "axios": "^0.16.2",
    "babel-polyfill": "^6.23.0",
    "body-parser": "^1.17.2",
    "boom": "^5.1.0",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "github-api": "^3.0.0",
    "helmet": "^3.6.1",
    "http-status-codes": "^1.1.6",
    "joi": "^10.6.0",
    "morgan": "^1.8.2",
    "swagger-jsdoc": "^1.9.5",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^1.4.6"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-register": "^6.24.1",
    "eslint": "^4.1.0",
    "eslint-plugin-prettier": "^2.1.2",
    "husky": "^0.14.1",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.4.4",
    "rimraf": "^2.6.1"
  },
  "engines": {
    "node": ">= 6.9.0",
    "npm": ">= 3.10.8"
  }
}
